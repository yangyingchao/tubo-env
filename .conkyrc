#font
use_xft yes
xftfont WenQuanYi Micro Hei Mono:size=11

# Update interval in seconds
update_interval 1


# Minimum size of text area
minimum_size 280 5

maximum_width 240


# Default colors and also border colors
default_color 4d4d4d
default_shade_color white
default_outline_color black
own_window_colour 262626

#position
gap_x 1030
gap_y 24
alignment top_left

# set to yes if you want all text to be in uppercase
uppercase no

#avoid flicker
double_buffer yes
no_buffers yes

#own window to run simultanious 2 or more conkys
own_window yes
own_window_type normal
own_window_hints undecorate,sticky,skip_taskbar,skip_pager
own_window_transparent yes


#shades
draw_shades no
#draw_graph_borders yes
#draw_borders yes


#borders
draw_borders no

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

#to prevent window from moving
use_spacer no


TEXT

${color #a40000}System Info ${color}
${color #2e3436}Kernel: $alignr${color dcff82}$kernel${color}${color}
${color #2e3436}Time: $alignr${color dcff82}${time %D %H:%M}${color}${color}
${color #2e3436}UpTime: $alignr${color dcff82}${uptime %H:%M}${color}${color}

${color #2e3436}CPU I ${color dcff82}${cpu cpu1}%${color} CPU II ${color dcff82}${cpu cpu2}%${color}${color}
${color #2e3436}Processes: ${color dcff82}${font}${processes} ${color}
${color #2e3436}Running: ${color dcff82}${font}${running_processes} ${color}
${color #2e3436}Mem: ${color dcff82}${font}${mem} ($memperc%)${color}
${color #dcff82}${membar 4,200}

${color #a40000}Network Info ${color}
${color #2e3436}IP Addr: ${color #dcff82}${addr eth0}${color}
${color #2e3436}Down: ${color #dcff82}${downspeed eth0}${color}${color} ${color #dcff82}${totaldown eth0}${color}${color}
${color #2e3436}Up:   ${color #dcff82}${upspeed eth0}${color}${color #dcff82} ${totalup eth0}

${color #a40000}File System ${color}
${color #2e3436}Disk IO: ${color #dcff82}${alignr 4}$diskio ${color} ${color}
${color #2e3436}Root: ${color}${alignr}${color #dcff82}${fs_free /}${color} Free ${color}
${color #dcff82}${fs_bar 4 /}
${color 2e3436}HOME: ${color}${alignr}${color #dcff82}${fs_free /home}${color} Free ${color}
${color #dcff82}${fs_bar 4 /home}${color}


